---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: cockroach-data
  namespace: instana-datastores
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: 50Gi
  storageClassName: {{ WAIOPS_STORAGE_CLASS_LARGE_BLOCK }}
  volumeMode: Filesystem
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: cockroach-logs
  namespace: instana-datastores
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: 50Gi
  storageClassName: {{ WAIOPS_STORAGE_CLASS_LARGE_BLOCK }}
  volumeMode: Filesystem
